{
  "name": "google-translate-api-browser-all",
  "version": "0.0.1",
  "private": true,
  "repository": "https://github.com/rxliuli/google-translate-api-browser.git",
  "license": "MIT",
  "scripts": {
    "setup": "npx lerna bootstrap && yarn pub",
    "fix:version": "syncpack fix-mismatches",
    "clean": "npx lerna clean",
    "pub": "npx lerna run pub",
    "clean:pkg": "npx lerna bootstrap && yarn clean"
  },
  "devDependencies": {
    "husky": "^4.3.0",
    "lint-staged": "^10.5.1",
    "prettier": "^2.2.1",
    "syncpack": "^5.6.10",
    "typescript": "^4.1.2"
  },
  "workspaces": {
    "packages": [
      "libs/*",
      "examples/*"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,css,md,json}": [
      "prettier --ignore-path .eslintignore --write",
      "git add"
    ]
  }
}
